{
  "name": "@pkgz/typo",
  "version": "0.0.0",
  "private": false,
  "description": "TypeScript definition generator for React components",
  "repository": "github:ricardocasares/typo",
  "license": "MIT",
  "author": "Ricardo Casares",
  "files": [
    "bin.js",
    "index.js"
  ],
  "main": "index.js",
  "bin": {
    "typo": "bin.js"
  },
  "scripts": {
    "format": "npx prettier --write **/*.{js,md,yml,json}",
    "release": "npx semantic-release@beta",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "globby": "^9.1.0",
    "react-to-typescript-definitions": "^1.2.0",
    "sade": "^1.4.2"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/release-notes-generator"
    ]
  }
}
